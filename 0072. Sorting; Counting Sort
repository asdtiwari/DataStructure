/* Program to sort the array using the counting sort technique */

# include <stdio.h>

int max (int * array, int size)
{
	int largest = *array;
	
	for (int i = 0; i < size; i++)
		if (*(array + i) > largest)
			largest = *(array + i);
			
	return largest;
}

int no_of_digit (int num)
{
	int count = 0;
	
	while (num > 0)
	{
		count++;
		num /= 10;
	}
	
	return count;
}

void initialize_to_zero (int * array, int size)
{
    for (int j = 0; j < size; j++)
		array[j] = 0;
}

void copy_array (int * array1, int * array2, int size)
{
    for (int j = 0; j < size; j++)
	   array1[j] = array2[j];
}

void cumatative_sum (int *array, int size)
{
    for (int j = 1; j < size; j++)
		array[j] = array[j] + array[j - 1];
}

void counting_sort (int * array, int size)
{
	# define radix 10
	int table [radix];
	
	int tmp [size];
	
	int largest = max(array, size);
	int passes = no_of_digit(largest);
	
	int divide = 1;
	int rem = 0;
	
	for (int i = 0; i < passes; i++)
	{
		initialize_to_zero(table, radix);
		
		for (int j = 0; j < size; j++)
		{
			rem = (array[j] / divide) % 10;
			++table[rem];
		}
		
		cumatative_sum(table, radix);
		
		for (int j = size - 1; j >= 0; j--)
		{
			rem = (array[j] / divide) % 10;
			--table[rem];
			tmp[table[rem]] = array[j];
		}
		
		copy_array(array, tmp, size);
		
		divide *= 10;
	}
}

void write (int *array, int size)
{
    printf("\n Enter %d elements in array \n", size);
    
    for(int i = 0; i < size; i++)
        scanf("%d", (array+i));
    
    printf(" Elements inserted successfullly \n");
}

void read (int *array, int size)
{
    printf("\n Elements of Array \n");
    
    for(int i = 0; i < size; i++)
        printf(" %d ", *(array + i));
        
    printf("\n All elements printed \n");
}

// Testing
void main ()
{
	# define max 100
	int array[max];
	
	int size;
	printf("\n Enter the size of array (<= 100): ");
	scanf("%d", &size);
	
	write(&array[0], size);
	read(&array[0], size);

	counting_sort(&array[0], size);
	printf("\n Sorted Array \n");
	read(&array[0], size);
}
